pkgname=proot-static
_pkgname=proot
pkgver=5.2.0
pkgrel=1
pkgdesc="chroot, mount --bind, and binfmt_misc without privilege/setup. Static binary only"
arch=('any')
url="https://proot-me.github.io/"
license=('GPL')
groups=()
depends=()
makedepends=()
provides=('proot')
conflicts=('proot' 'proot-bin')
backup=()
options=()
#install=
source=()
md5sums=()
noextract=()

MAIN_REPO=https://dwa8bhj1f036z.cloudfront.net
PROOT_LINK=${MAIN_REPO}/proot

source=("proot-x86_64"::"$PROOT_LINK/proot-v5.2.0-x86_64-static" "proot-arm"::"$PROOT_LINK/proot-arm")
md5sums=('6946c45540e9a2a156f74777fe1f3ed6' '8218c5f00e77e2e6e04c372ced27c7e7')

package() {
    echo "Installing proot static binaries"
    install -d -m 755 "${pkgdir}/usr/bin/"
    install -m 755 "${srcdir}/"${_pkgname}-* ${pkgdir}/usr/bin/
}

